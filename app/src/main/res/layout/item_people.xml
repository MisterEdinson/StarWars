<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_search"
    android:id="@+id/cardFavoritePeople"
    android:layout_margin="4dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNamePeopleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_reg"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Luke Skywalker"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGenderPeopleItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/orbitron_reg"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="Gender : male"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNamePeopleItem" />

    <TextView
        android:id="@+id/tvStarshipsPeopleItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/orbitron_reg"
        android:gravity="center|left"
        android:text="Starships: 3"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGenderPeopleItem" />

    <ImageView
        android:id="@+id/imgFavoriteAddPeopleItem"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_star_border" />

</androidx.constraintlayout.widget.ConstraintLayout>